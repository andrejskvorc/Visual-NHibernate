<Window x:Class="ArchAngel.LauncherWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ArchAngel" Height="105" Width="882" Background="DarkBlue">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button Click="buttonStartWorkbench_Click" Content="Start ArchAngel Workbench" Grid.Column="0" Margin="5, 5, 5, 5"/>
        <Button Click="buttonStartWorkbenchNH_Click" Content="Start Visual NHibernate" Grid.Column="1" Margin="5, 5, 5, 5"/>
		<Button Click="buttonStartDesigner_Click" Content="Start ArchAngel Designer" Grid.Column="2" Margin="5, 5, 5, 5"/>
        <Button Click="buttonRunNHTemplateTest_Click" Content="Run NH Template Test" Grid.Column="3" Margin="5, 5, 5, 5"/>
		<Button Click="buttonRunHBM2ModelTransform_Click" Content="Run HBM To Model Test" Grid.Column="4" Margin="5, 5, 5, 5"/>
     </Grid>
</Window>
